<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.visualstudio.verboben14.bookie.BookDetails"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

     <LinearLayout
         android:id="@+id/book_details_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_details_bookcover"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/book_details_booktitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A könyv címe"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:layout_toEndOf="@+id/book_details_bookcover"
            />

        <TextView
            android:id="@+id/book_details_isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A könyv ISBN száma"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:layout_toEndOf="@+id/book_details_bookcover"
            android:layout_below="@+id/book_details_booktitle"
            android:layout_alignParentEnd="true" />
         </RelativeLayout>
         </LinearLayout>

    <LinearLayout
        android:id="@+id/book_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/book_details_title_layout"
        android:layout_alignParentStart="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/book_details_authors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_author"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:ellipsize="none"
                android:scrollHorizontally="false"
                />

            <TextView
                android:id="@+id/book_details_bookauthors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="none"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="A könyv írója"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/book_details_likes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_likes"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:ellipsize="none"
                android:scrollHorizontally="false"
                />

            <TextView
                android:id="@+id/book_details_booklikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="none"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="A könyv értékelése"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/book_details_description"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_description"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:ellipsize="none"
                android:scrollHorizontally="false"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/book_details_bookdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A könyv leírása"
                    android:textSize="20sp"
                    android:scrollbars = "vertical"
                    />
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/book_details_favoriteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/star_outline"
        android:background="@color/colorBackground"
        />

</RelativeLayout>


